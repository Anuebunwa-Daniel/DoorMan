<body>
    <div class="wrapper animated bounceInLeft">
        <div class="container">
        <div class="logo">
            <img src="../assets/img/DoorMan-logo.jpg" alt="">
        </div>
 <div class="login_form">
       
    <div class="brand">
        <h2><br>Login as a Rider</h2>
        <p>You must use the Email use during registration to login your Account</p>
    </div>
        
    <form method="post" action="/ridersLogin">

        <div class="mb-3 row">
            <label for="Number" class="col-2 col-form-label"><i class="fa-solid fa-phone-volume"></i></label>
            <div class="col-10 ">
              <input type="tel" class="form-control" id="password" placeholder="Phone Number" name="Number">
            </div>
          </div>

            <div class="mb-3  row">
                <label for="password" class="col-2 col-form-label"><i class="fa-solid fa-lock"></i></label>
                <div class="col-10">
                  <input type="password" class="form-control" id="password" placeholder="password" name="password">
                </div>
              </div>
           
               
            <button type="submit">Login</button>
          
        <div>
            <br>
            <a href="#" id="forget">forgotten your password?</a> <br><br>
            <a href="/ridersReg" id="acct">create an account</a>
        </div>

        </form>
</div>


</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
